<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.duboomom.iLikeSchool.school.vote.dao.VoteDAO">

	<insert id="insertVote" parameterType="map">
		INSERT INTO
			`vote`
		(
			`schoolId`
			, `userId`
			, `title`
			, `endDate`
			, `createdAt`
			, `updatedAt`		
		)
		VALUE
		(
			#{schoolId}
			, #{userId}
			, #{title}
			, #{endDate}
			, now()
			, now()
		)
		
	</insert>
	
	<select id="selectVoteIdbyTitle" parameterType="map" resultType="int">
		SELECT
			`id`
		FROM
			`vote`
		WHERE
			`schoolId` = #{schoolId}
			AND `userId` = #{userId}
			AND `title` = #{title}
	</select>
	
	<insert id="insertVoteItem" parameterType="map">
		INSERT INTO
			`voteItem`
		(
			`voteId`
			, `item`
			, `createdAt`
			, `updatedAt`		
		)
		VALUE
		(
			#{voteId}
			, #{item}
			, now()
			, now()
		)
		
	</insert>

	<select id="selectVote" parameterType="int" resultType="com.duboomom.iLikeSchool.school.vote.model.Vote">
		SELECT
			`id`
			, `schoolId`
			, `userId`
			, `title`
			, `endDate`
			, `createdAt`
			, `updatedAt`
		FROM
			`vote`
		WHERE
			`schoolId` = #{schoolId}
	</select>
	
	<delete id="deleteVote" parameterType="map">
		DELETE FROM
			`vote`
		WHERE
			`id` = #{voteId}
			AND `userId` = #{userId}
		
	</delete>
	
	<delete id="deleteVoteItems" parameterType="int">
		DELETE FROM
			`voteItem`
		WHERE
			`voteId` = #{voteId}
	</delete>
	
	<select id="selectVoteItems" parameterType="int" resultType="com.duboomom.iLikeSchool.school.vote.model.VoteItem">
		SELECT
			`id`
			, `voteId`
			, `item`
			, `createdAt`
			, `updatedAt`
		FROM
			`voteItem`
		WHERE
			`voteId` = #{voteId}
	
	</select>
	
	<select id="selectTitlebyId" parameterType="int" resultType="String">
		SELECT
			`title`
		FROM
			`vote`
		WHERE
			`id` = #{id}	
	</select>
	
	<insert id="insertVoteResult" parameterType="map">
		INSERT INTO
			`voteResult`
		(
			`itemId`
			, `userId`
			, `createdAt`
			, `updatedAt`		
		)
		VALUE
		(
			#{itemId}
			, #{userId}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectItemResultByVote" parameterType="int" resultType="com.duboomom.iLikeSchool.school.vote.model.VoteItemResult">
		SELECT
			`voteItem.item`, count(1) AS `itemCount`
		FROM
			`voteItem` 
		JOIN
			`voteResult` ON `voteItem.id` = `voteresult.itemId` 
		WHERE
			`voteId` = #{voteId}
		GROUP BY 
			`voteItem.id`;
	
	</select>
	
</mapper>